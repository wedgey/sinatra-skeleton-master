<% if @message.errors.any? %>
  <div>
    <strong>Some issues with your message, please fix them: </strong>
    <ul>
      <% @message.errors.full_messages.each do |error_message| %>
      <li><%= error_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<form action="/messages" method="post">
  <div>
    <label>Author</label>
    <input type="text" name="author" value="<%= @message.author %>">
  </div>
  <div>
    <label>Subject</label>
    <input type="text" name="subject" value="<%= @message.title %>">
  </div>
  <div>
    <label>Content</label>
    <input type="text" name="content" value="<%= @message.content %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>